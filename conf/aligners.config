/*
This file provides default parametrisation for each aligner
This can be extended/overwritten at run time
e.g.
  -params-file conf/aligner.json
  -params-file conf/aligner.yaml
  -c alternative-aligner.config
Or you can simly modify this file or add to it
*/
params {
  alignersParamsDNA = [:] //can be empty or overwritten by -params-file
  alignersParamsRNA = [:] //can be empty or overwritten by -params-file
  defaults {
    alignersParamsDNA = [
      'biokanga': [
        default: ''
      ],
      'bbmap': [
        default: ''
      ],
      'bowtie2': [
        default: ''
      ],
      'bwa': [
        default: ''
      ]
    ]
    alignersParamsRNA = [
      'biokanga': [
        default: '--mode 0 --pemode 3 --pairmaxlen 100000 --substitutions 5 --minchimeric 50'
      ],
      'bbmap': [
        default: 'maxindel=100000 ambiguous=best intronlen=20 local=t'
      ],
      'bowtie2': [
        default: ''
      ],
      'bwa': [
        default: ''
      ],
      'dart': [
        default: ''
      ],
      'gsnap': [
        default: ''
      ],
      'hisat2': [
        default: ''
      ],
      'star': [
        default: ''
      ],
      'subread': [
        default: ''
      ]
    ]
  }
}
