process {
  //default container, standard-ish linux toool set: wget, gawk... //replaced by individual containers where applicable
  container = 'rsuchecki/tools:0.2'

    withLabel: bbmap {
      container = 'rsuchecki/bbmap:38.34'
    }
    withLabel: benchmark {
      container = 'rsuchecki/biokanga_benchmark:0.7'
    }
    withLabel: biokanga {
      container = 'csirocropinformatics/biokanga:4.4.0'
    }
    withLabel: bowtie2 {
      container = 'comics/bowtie2:2.3.4.1'
    }
    withLabel: bwa {
      container = 'rsuchecki/bwa:0.7.17'
    }
    withLabel: dart {
      container = 'rsuchecki/dart:1.3.3'
    }
    withLabel: gsnap {
      container = 'rsuchecki/gmap-gsnap:2018-10-26'
    }
    withLabel: hisat2 {
      container = 'rsuchecki/hisat2:2.1.0'
    }
    withLabel: rnftools {
      container = 'rsuchecki/rnftools:0.3.1.3'
      // container = 'rsuchecki/rnftools:0.3.1.3_3123fca68e14580a453deea77a0549929ed44715'
    }
    withLabel: rrender {
      container = 'rsuchecki/renderer:0.3'
    }
    withLabel: rscript {
      container = 'rsuchecki/rscripts:0.3.1'
    }
    withLabel: samtools {
      container = 'zlskidmore/samtools:1.9'
    }
    withLabel: sra {
      container = 'ncbi/sra-toolkit:2.9.2'
    }
    withLabel: star {
      container = 'rsuchecki/star-aligner:2.6.1b'
    }
    withLabel: subread {
      container = 'genomicpariscentre/subread:1.6.2'
    }
}
